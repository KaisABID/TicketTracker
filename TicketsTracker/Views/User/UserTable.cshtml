@{
    ViewData["Title"] = "Home Page";
}
@model User
<div class= "d-flex justify-content-between align-items-stretch">
    <div class="btn-group">
        @Html.ActionLink("New", "UserCard", 0,new { @class = "btn btn-primary" })  
    </div>
    <div>
        <h2 class="text-center">Users</h2>
    </div>
    <div>
        @Html.ActionLink("LogOut", "Index", "HomeController", null, new { @class = "btn btn-dark" })
    </div>
</div>

<br><br>
<table class="table table-bordered">
    <thead>
        <tr >
            <th class="text-primary">Login</th>
            <th class="text-primary">First Name</th>
            <th class="text-primary">Last Name</th>
            <th class="text-primary">  </th>
        </tr>
    </thead>
    <tbody>
    @foreach (User u in ViewBag.AllUsers)
        {
            <tr>

                <td>@u.FirstName</td>
                <td>@u.LastName</td>
                <td>@u.Email</td>
                <td>
                    <a href="/Edit/@u.UserId"> Edit </a> |
                    <a href="/Delete/@u.UserId"> Delete </a>

                </td>
            </tr>
        }
</table>
